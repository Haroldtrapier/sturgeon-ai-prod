// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts      Account[]
  sessions      Session[]
  profile       UserProfile?
  subscriptions Subscription[]
  proposals     Proposal[]
  wins          Win[]
  savedOpps     SavedOpportunity[]
  savedSearches SavedSearch[]
  documents     Document[]
  certs         CertificationApplication[]
  reviews       HumanReviewRequest[]
  auditLogs     AuditLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model UserProfile {
  id                  String   @id @default(cuid())
  userId              String   @unique
  companyName         String?
  naicsCodes          String[] @default([])
  pscCodes            String[] @default([])
  cageCode            String?
  duns                String?
  capabilitiesSummary String?
  certifications      String[] @default([])
  phone               String?
  website             String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Subscription {
  id                   String    @id @default(cuid())
  userId               String
  stripeCustomerId     String?
  stripeSubscriptionId String?
  plan                 String    @default("free") // free | pro | enterprise
  active               Boolean   @default(false)
  currentPeriodEnd     DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Proposal {
  id        String   @id @default(cuid())
  userId    String
  title     String
  rawText   String
  generated String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  embeddings Embedding[]
}

model Embedding {
  id         String @id @default(cuid())
  proposalId String
  vector     Json

  proposal Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
}

model Document {
  id        String   @id @default(cuid())
  userId    String
  filename  String
  text      String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SavedOpportunity {
  id         String   @id @default(cuid())
  userId     String
  source     String // sam | unison | govwin | govspend | manual
  externalId String?
  title      String
  agency     String?
  status     String   @default("watchlist") // watchlist | pursuing | submitted | won | lost
  metadata   Json?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SavedSearch {
  id          String   @id @default(cuid())
  userId      String
  name        String
  query       String
  marketplace String? // sam | govwin | govspend | unison
  params      Json?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Win {
  id               String    @id @default(cuid())
  userId           String
  opportunityTitle String
  agency           String?
  amount           Float?
  contractNumber   String?
  description      String?
  dateWon          DateTime?
  createdAt        DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CertificationApplication {
  id        String   @id @default(cuid())
  userId    String
  certType  String // 8(a) | HUBZone | WOSB | SDVOSB | VOSB | EDWOSB
  status    String   @default("planning") // planning | in_progress | submitted | approved | denied
  notes     String?
  checklist Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model HumanReviewRequest {
  id           String   @id @default(cuid())
  userId       String
  proposalId   String?
  status       String   @default("pending") // pending | in_review | completed
  notes        String?
  resultPdfUrl String?
  price        Float?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  details   Json?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}
