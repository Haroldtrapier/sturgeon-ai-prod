generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Subscription {
  id               String   @id @default(cuid())
  userId           String
  plan             String   // "free", "pro", or "enterprise"
  active           Boolean  @default(true)
  currentPeriodEnd DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId])
}
